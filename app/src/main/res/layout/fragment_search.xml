<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".SearchFragment">

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="60dp"
        android:layout_marginStart="32dp"
        android:contentDescription="@string/otkizu"
        android:padding="0dp"
        android:src="@drawable/back2"
        android:background="@android:color/transparent"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/cvMovieName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="@string/bolimder"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:layout_marginTop="-40dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="24dp"
        android:background="@color/input"/>
    <androidx.cardview.widget.CardView
        android:layout_width="255dp"
        android:layout_height="56dp"
        app:cardCornerRadius="10dp"
        >
        <androidx.appcompat.widget.SearchView
            android:id="@+id/searchBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:hint="@string/izdeu"
            android:background="@color/input"
            app:searchHintIcon="@drawable/hide_password"
            app:searchIcon="@drawable/hide_password" />
    </androidx.cardview.widget.CardView>


</LinearLayout>