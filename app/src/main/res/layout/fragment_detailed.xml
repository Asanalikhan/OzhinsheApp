<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="340dp"
                android:src="@drawable/zinshe"/>
            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="55dp"
                android:layout_marginStart="10dp"
                android:contentDescription="@string/otkizu"
                android:padding="0dp"
                android:src="@drawable/back2"
                android:background="@android:color/transparent"
                tools:ignore="MissingConstraints" />
            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="65dp"
                android:layout_marginTop="230dp"
                android:contentDescription="@string/telehikaya"
                android:background="@android:color/transparent"
                android:src="@drawable/bookmark_add" />
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/floatingActionButton"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginTop="85dp"
                android:layout_gravity="center"
                android:clickable="true"
                android:contentDescription="@string/telehikaya"
                android:src="@drawable/play"
                app:backgroundTint="@color/button2"
                app:shapeAppearance="@style/Widget.Material3.CircularProgressIndicator"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@android:color/white"
                android:focusable="true" />
            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="end"
                android:layout_marginEnd="65dp"
                android:layout_marginTop="230dp"
                android:contentDescription="@string/telehikaya"
                android:src="@drawable/share"
                android:background="@android:color/transparent"/>
            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="280dp"
                android:layout_marginStart="58dp"
                android:text="@string/tizimge_qosu"
                android:textSize="12sp"
                android:textColor="@color/undersalem"
                android:fontFamily="sans-serif-medium"/>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bolisu"
                android:layout_marginTop="280dp"
                android:layout_gravity="end"
                android:layout_marginEnd="70dp"
                android:textSize="12sp"
                android:textColor="@color/undersalem"
                android:fontFamily="sans-serif-medium"/>
        </FrameLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="32dp"
            android:layout_marginBottom="-32dp"
            android:backgroundTint="@color/background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">
                <TextView
                    android:id="@+id/cvMovieName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="TextView"
                    android:textColor="@color/white"
                    android:textSize="24sp" />
                <TextView
                    android:id="@+id/cvMovieDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginTop="8dp"
                    android:text="TextView"
                    android:textColor="@color/undersalem"
                    android:textSize="18sp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="24dp"
                    android:background="@color/input"/>
                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="5"
                    android:text="@string/your_long_text"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tolugraq"
                    android:textSize="14sp"
                    android:textColor="@color/login"
                    android:fontFamily="sans-serif-medium"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/regiser"
                    android:layout_marginTop="24dp"
                    android:textSize="14sp"
                    android:textColor="@color/regiser"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-20dp"
                    android:layout_marginStart="80dp"
                    android:textSize="14sp"
                    android:textColor="@color/undersalem"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/produser"
                    android:textSize="14sp"
                    android:textColor="@color/regiser"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-20dp"
                    android:layout_marginStart="80dp"
                    android:textSize="14sp"
                    android:textColor="@color/undersalem"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="24dp"
                    android:background="@color/input"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:text="@string/bolimder"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-20dp"
                    android:layout_marginEnd="30dp"
                    android:layout_gravity="end"
                    android:textSize="14sp"
                    android:textColor="@color/undersalem"/>
                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="-20dp"
                    android:layout_marginTop="-35dp"
                    android:src="@drawable/next"
                    android:layout_gravity="end"
                    android:fontFamily="sans-serif"
                    android:background="@android:color/transparent"
                    android:contentDescription="@string/telehikaya"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:layout_marginTop="32dp"
                    android:text="@string/screenshots"
                    android:fontFamily="sans-serif"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:text="@string/uqsas"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:fontFamily="sans-serif-medium"
                    android:layout_gravity="start"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/all"
                    android:layout_marginTop="-20dp"
                    android:textSize="14sp"
                    android:textColor="@color/login"
                    android:fontFamily="sans-serif-medium"
                    android:layout_gravity="end"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:layout_marginBottom="100dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
